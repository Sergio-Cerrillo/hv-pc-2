{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2022",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "server/**/*" // Incluye tus archivos TypeScript
  ],
  "exclude": [
    "node_modules" // Excluye node_modules
  ]
}
